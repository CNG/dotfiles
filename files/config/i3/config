set $RaiseVolume --no-startup-id amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks 
set $LowerVolume --no-startup-id amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
set $Mute --no-startup-id amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks
set $Next --no-startup-id playerctl next && pkill -RTMIN+10 i3blocks
set $Prev --no-startup-id playerctl previous && pkill -RTMIN+10 i3blocks
set $Play --no-startup-id playerctl play-pause && pkill -RTMIN+10 i3blocks

# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec $RaiseVolume
bindsym XF86AudioLowerVolume exec $LowerVolume
bindsym XF86AudioMute exec $Mute
bindsym XF86AudioNext exec $Next
bindsym XF86AudioPrev exec $Prev
bindsym XF86AudioPlay exec $Play

# copy and paste with Vim like keys with Ctrl or capslock(mapped to hyper)
bindsym Ctrl+y --release exec xdotool key --clearmodifiers Ctrl+c
bindsym Ctrl+p --release exec xdotool key --clearmodifiers Ctrl+v
bindsym mod4+y --release exec xdotool key --clearmodifiers Ctrl+c
bindsym mod4+p --release exec xdotool key --clearmodifiers Ctrl+v
bindsym mod4+x --release exec xdotool key --clearmodifiers Ctrl+x
bindsym mod4+a --release exec xdotool key --clearmodifiers Ctrl+a

