    "backlight/slider": {
        "min": 1,
        "max": 5,
        "orientation": "horizontal",
        "device": "intel_backlight"
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    // "idle_inhibitor": {
    //     "format": "{icon}",
    //     "format-icons": {
    //         "activated": "ÔÅÆ",
    //         "deactivated": "ÔÅ∞"
    //     }
    // },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "sway/language": {
        "format": "{long}",
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
    },
    "clock": {
        "interval": 1,
        "format": "<big>{:%Y-%m-%d %H:%M:%S %Z}</big>",
        "format-alt": "{:%Y-%m-%d %H:%M:%S %z}",
        "timezones": ["America/Los_Angeles", "America/New_York", "UTC"],
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>",
        "actions":  {
            //"on-click": "tz_down",
            "on-click-right": "tz_up",
        },
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "interval": 5,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{power}W {capacity}% {icon}",
        "format-full": "{power}W {capacity}% {icon}",
        "format-charging": "{power}W {capacity}% Ôóß",
        "format-plugged": "{power}W {capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
