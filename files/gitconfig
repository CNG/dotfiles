[include]
        path = ~/.gitconfig.local
[hub]
        protocol = https
[alias]
        co = checkout
        promote = !~/.zsh/functions/git-promote
        wtf     = !~/.zsh/functions/git-wtf
        rank-contributors = !~/.zsh/functions/git-rank-contributors
        count   = !git shortlog -sn
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = vim
[rebase]
        autosquash = true
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[diff]
        renameLimit = 3000
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to suppress warning message
        default = simple
[user]
        # Require setting user.name and email per-repo
        # https://stackoverflow.com/questions/8337071/different-gitconfig-for-a-given-subdirectory
        # This makes mixing work and personal more explicit.
        useConfigOnly = true
